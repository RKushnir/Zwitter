<h1><%= link_to 'Zвіттер', root_path%></h1>
<div class="block" id="block-signup">
  <h2>Створення Профілю</h2>
  <div class="content">
    <div class="flash">
      <% flash.each do |type, message| -%>
      <div class="message <%= type %>">
        <p><%=  message %></p>
      </div>
      <% end -%>
    </div>
    <%=  error_messages_for :user%>
    <% form_for :user, :url => users_path, :html => { :class => 'form' } do |f| -%>
      <div class="group">
        <div class="left">
          <label class="label">Ім'я Користувача</label>
        </div>
        <div class="right">
          <%= f.text_field :login, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <label class="label">Е-Мейл</label>
        </div>
        <div class="right">
          <%= f.text_field :email, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <label class="label">Пароль</label>
        </div>
        <div class="right">
          <%= f.password_field :password, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      
      <div class="group">
        <div class="left">
          <label class="label">Підтвердження Паролю</label>
        </div>
        <div class="right">
          <%= f.password_field :password_confirmation, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      
      <div class="group navform">
        <div class="right">
         <input type="submit" class="button" value="Зареєструвати нового користувача" /> або <%= link_to 'увійти під існуючим', login_path %>
        </div>
        <div class="clear"></div>
      </div>
    <% end -%>
  </div>
</div>